<form name="frm" method="post" action="insert">
    <table>
        <tr>
            <td width=100 class="title">상품코드</td>
            <td width=500><input type="text" name="code" value="<%=newCode%>" readonly></td>
        </tr>
        <tr>
            <td width=100>상품이름</td>
            <td width=500><input type="text" name="name" size="50"></td>
        </tr>
        <tr>
            <td width=100 class="title">상품가격</td>
            <td width=500><input type="text" name="price"></td>
        </tr>
        <tr>
            <td width=100 class="title">제조사</td>
            <td width=500><input type="text" name="company"></td>
        </tr>
    </table>
    <div id="buttons">
        <input type="submit" value="등록" class="button">
        <input type="reset" value="취소" class="button">
        <input type="button" value="목록" class="button" onclick="location.href='/'">
    </div>
</form>
<script>
    $(frm).on("submit", function(e){
        e.preventDefault();

        var code=$(frm.code).val();
        var name=$(frm.name).val();
        var price=$(frm.price).val();
        var company=$(frm.company).val();
        if(name==""){
            alert("상품 이름을 입력하세요!");
            $(frm.name).focus();
        }else if(price==""){
            alert("상품 가격을 입력하세요!");
            $(frm.price).focus();
        }else if(company==""){
            alert("제조사를 입력하세요!");
            $(frm.company).focus();
        }else{
            if(!confirm(`${code}:${name}:${company}:${price} 저장하실래요?`)) return;
            frm.submit();
        }
    });
</script>